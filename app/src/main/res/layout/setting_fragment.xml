<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".ui.fragment.setting.SettingFragment">


        <TextView
            android:id="@+id/tv_settings"
            style="@style/fragment_name_ts"
            android:text="Settings"
            android:textColor="?attr/whiteText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="34dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/tv_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:background="?attr/backgroundColor"
                android:text="Share this app"
                android:textColor="?attr/whiteText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:background="?attr/backgroundColor"
                android:text="Rate us"
                android:textColor="?attr/whiteText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:background="?attr/backgroundColor"
                android:text="Leave feedback"
                android:textColor="?attr/whiteText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintBottom_toTopOf="@id/layout_4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_3">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="Clear history"
                android:textColor="?attr/pBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="?attr/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/layout_4" />

        <TextView
            android:id="@+id/app_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/backgroundColor"
            android:text="v1.0.0"
            android:textColor="?attr/whiteText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/backgroundColor"
            android:gravity="center"
            android:text="Theme"
            android:textColor="?attr/whiteText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_theme"
            tools:listitem="@layout/list_theme" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
